<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
    <TextView android:text="Select the sensor rate (will be valid for all active sensors)." android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="false"></TextView>
    <RadioGroup android:id="@+id/SRSradioGroup1" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_weight="1">
        <RadioButton android:layout_height="wrap_content" android:text="SENSOR_DELAY_FASTEST" android:layout_width="wrap_content" android:id="@+id/SRSradio0" android:checked="true"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:text="SENSOR_DELAY_GAME" android:layout_width="wrap_content" android:id="@+id/SRSradio1"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:text="SENSOR_DELAY_UI" android:layout_width="wrap_content" android:id="@+id/SRSradio2"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:text="SENSOR_DELAY_NORMAL" android:layout_width="wrap_content" android:id="@+id/SRSradio3"></RadioButton>
    </RadioGroup>
     <LinearLayout
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center">
      <Button android:text="Discard" android:id="@+id/SRSbutton1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
      <Button android:text="Save and Return" android:id="@+id/SRSbutton2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  </LinearLayout>
</LinearLayout>

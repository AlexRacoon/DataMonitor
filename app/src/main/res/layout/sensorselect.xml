<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  
  
  <ListView android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawSelectorOnTop="false"/>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center">
      <Button android:text="Discard" android:id="@+id/SSbutton1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
      <Button android:text="Save and Return" android:id="@+id/SSbutton2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  </LinearLayout>
  
</LinearLayout>
